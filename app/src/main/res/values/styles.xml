<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SudokuEditText">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/activity_sudoku_cellTextSize</item>
        <item name="android:inputType">number</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:digits">123456789</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:layout_marginEnd">@dimen/activity_sudoku_cell_padding</item>
        <item name="android:layout_marginBottom">@dimen/activity_sudoku_cell_padding</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:lines">1</item>
        <item name="android:alpha">0.7</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Theme.AppCompat.Light">
        <item name="actionMenuTextColor">#fff</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">#fff</item>
    </style>`

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="lblTimer" parent="Base.TextAppearance.AppCompat.Display2"/>
    <style name="lblNumbersLeft" parent="Base.TextAppearance.AppCompat.Body2"/>

    <style name="lblCongrats" parent="Base.TextAppearance.AppCompat.Display2"/>

</resources>
